    <a href="@Url.Action("Index" , "Home")" class="btn btn-dark" style="margin-bottom:20px"><i class="fa-solid fa-arrow-left" style="color: #ffffff; padding-right: 5px"></i> Trở về danh sách</a>
    <script src="~/Ckeditor/ckeditor.js"></script>

    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="col-md-6">
            @Html.LabelFor(model => model.Name, "Tên Sản Phẩm", htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail4" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <script>
                CKEDITOR.replace("Description")
            </script>
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Img, "Ảnh Sản Phẩm", htmlAttributes: new { @class = "form-label" })

            @Html.TextBoxFor(model => model.Img, null, new { type = "file", @class = "form-control", @id = "inputEmail4" })
            @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })

        </div>


        <div class="col-md-6">
            @Html.LabelFor(model => model.Price, "Giá", htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail4" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(model => model.Promotional_Price, "Giá Khuyến mãi", htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Promotional_Price, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail4", @Value = "0" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Id_Type, "Loại", htmlAttributes: new { @class = "form-label" })

            @Html.DropDownList("Id_Type", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Id_Type, "", new { @class = "text-danger" })

        </div>
        <div class="col-md-6">
            @Html.LabelFor(model => model.Id_Promotional, "Khuyến mãi", htmlAttributes: new { @class = "form-label" })

            @Html.DropDownList("Id_Promotional", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Id_Promotional, "", new { @class = "text-danger" })

        </div>
        <div class="col-md-12">
            @Html.LabelFor(model => model.Describe, "Mô Tả Sản Phẩm", htmlAttributes: new { @class = "form-label" })

            @Html.TextAreaFor(model => model.Describe, new { @class = "form-control", @id = "exampleFormControlInput1", @rows = "4" })
            @Html.ValidationMessageFor(model => model.Describe, "", new { @class = "text-danger" })
            <script>
                CKEDITOR.replace("Description")
            </script>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
                <input type="reset" value="Làm lại" class="btn btn-danger" />
            </div>
        </div>
    }





