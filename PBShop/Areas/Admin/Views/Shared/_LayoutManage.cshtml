    <script>
        function DeleteProduct(id) {
             $.ajax({
            url: '@Url.Action("Delete", "Home")',
            type: 'POST',
                 data: { id: id },
                 success: function (data){

                     LoadData();
                            }
                });
    };

     function LoadData() {
             $.ajax({
            url: '@Url.Action("ReloadData", "Home")',
            type: 'GET',

                 success: function (data){

                     $(".table__container").html(data);
                            }
                });
    };

    function ShowModal(id) {
             $.ajax({
            url: '@Url.Action("Modals", "Home")',
                 type: 'POST',
                 data: { id: id },
                 success: function (data){

                     $("#exampleModal").html(data);
                            }
                });
        };
    </script>

